{% extends 'base.html.twig' %}




{% block title %}Login!{% endblock %}
{% block stylesheet %}
 {{parent()}}
<body style="background-image: url('{{ asset('img/aa.avif') }}');">
{% endblock %}


{% block navbar %}
    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-lg bg-white navbar-light shadow sticky-top p-0 ">
        <a href="" class="navbar-brand d-flex align-items-center px-4 px-lg-5">
            <h2 class="m-0 text-primary">SYMFONY</h2>
        </a>
        <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav ms-auto p-4 p-lg-0">
                <a href="" class="nav-item nav-link ">Categories</a>
               <a href="" class="nav-item nav-link">Users</a>
                <a href="" class="nav-item nav-link">Events</a>
                <a href="" class="nav-item nav-link">Contact</a>
                
               
            </div>
             {% if is_granted ('IS_AUTHENTICATED_FULLY') %}
                   <p>{{ app.user.nom }} {{ app.user.prenom }} </p>
                   <a href="{{ path('app_logout') }}"  class="btn btn-primary py-4 px-lg-5 d-none d-lg-block">logout</a>
          {% else %}
                 <a href="{{ path('app_login') }}"  class="btn btn-primary py-4 px-lg-5 d-none d-lg-block">login</a>
          {% endif %}
        </div>
    </nav>
    <!-- Navbar End -->
{% endblock %}
{% block body %}
      <div class="main-panel">
    <div class="container">
        <div class="page-inner">
            <div class="container">
            <div class="page-inner">
                <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row pt-2 pb-4">
                <div>   
                <form method="post" action="">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}" class="btn btn-info">Logout</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal" >sign in</h1>
        <label for="username">Email</label>
        <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
        <label for="password">Password</label>
        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}">

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <input type="checkbox" name="_remember_me" id="_remember_me">
                <label for="_remember_me">Remember me</label>
            </div>
        #}

        <button class="btn btn-lg btn-primary" type="submit">
            Sign in
        </button>
    </form>
   
                  
                 

                            
                </div>
                
                </div>
            
            
            
                
            </div>
            </div>
        </div>
      
    </div>     
    </div> 
 
{% endblock %}
