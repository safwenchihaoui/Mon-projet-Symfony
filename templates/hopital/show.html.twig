{% extends 'adminbase.html.twig' %}

{% block stylesheet %}
	{{parent()}}
{% endblock %}

{% block Dashboard %}
	<div class="main-panel">
		<div class="container">
			<div class="page-inner">
				<div class="d-flex align-items-left align-items-md-center flex-column flex-md-row pt-2 pb-4"></div>

				<h1>Hopital</h1>

				<table id="myTable" class="table" width="100%">
					<tbody>
						<tr>
							<th>Id</th>
							<td>{{ hopital.id }}</td>
						</tr>
						<tr>
							<th>Nom</th>
							<td>{{ hopital.nom }}</td>
						</tr>
						<tr>
							<th>Adresse</th>
							<td>{{ hopital.adresse }}</td>
						</tr>
						<tr>
							<th>Tel</th>
							<td>{{ hopital.tel }}</td>
						</tr>
						<tr>
            
								<th>Image</th>

								<td><img src="{{ asset('img/' ~ hopital.image) }}" width="100" alt="{{ hopital.nom }}"></td>
             
						</tr>
						<tr>
							<th>Fax</th>
							<td>{{ hopital.fax }}</td>
						</tr>
					</tbody>
				</table>

				<a href="{{ path('app_hopital_index') }}" class="btn btn-dark">back to list</a>

				<a href="{{ path('app_hopital_edit', {'id': hopital.id}) }}" class="btn btn-success">edit</a>

				{{ include('hopital/_delete_form.html.twig') }}
			</div>
		</div>


		{% block footer %}


			<footer class="footer">
				<div class="container-fluid d-flex justify-content-between">
					<nav class="pull-left">
						<ul class="nav"></ul>
					</nav>
					<div class="copyright">
						2024, made with
						<i class="fa fa-heart heart text-danger"></i>
						by
						<a href="http://www.themekita.com">Symfony</a>
					</div>
					<div>
						Distributed by
						<a target="_blank" href="https://themewagon.com/">Mon_Site</a>.
					</div>
				</div>
			</footer>


		{% endblock %}
	</div>


{% endblock %}


{% block javascript %}
	{{parent()}}
{% endblock %}
